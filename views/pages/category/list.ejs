<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../../partials/header'); %></header>

    <main>
      <% if ( success_msg.length ) { %>
        <div class="alert alert-success"><%= success_msg %></div>
      <% } %>
      <% if ( error_msg.length ) { %>
        <div class="alert alert-danger"><%= error_msg %></div>
      <% } %>
      <% if(categories.length){ %>
        <h3 class="text-center my-2 text-success">CATEGORY LIST</h3>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(function(category, index) { %>
          <tr>
            <td><%= index %></td>
            <td><%= category.name %></td>
            <td><%= moment(category.createdAt).format('hh:mm a MMM DD YYYY') %></td>
            <td>
              <a href="category/<%= category._id%>/detail" class="btn btn-primary">
                Detail
              </a>
              <a href="category/<%= category._id%>/update" class="btn btn-success">
                Update
              </a>
              <a href="category/<%= category._id%>/delete" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else{ %>  
        <p class="text-primary text-center my-3">
          No categories created as of now, please create one using the navigation panel.
        </p>
     <% } %>
      
    </main>

    <footer><%- include('../../partials/footer'); %></footer>
  </body>
</html>
