<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../../partials/header'); %></header>

    <main>
      <h3 class="text-center my-2 text-success">UPDATE CATEGORY</h3>
      <form action="/category/<%= category._id%>/update" method="post" class="w-50 mx-auto my-3">
        <div class="form-group">
          <label for="blog">Blog/Category Name</label>
          <input type="text" class="form-control" name="name" value="<%= category.name %>" placeholder="Enter blog/category name">
        </div>
        <button type="submit" class="btn btn-primary">Update Category</button>
      </form>
    </main>

    <footer><%- include('../../partials/footer'); %></footer>
  </body>
</html>
